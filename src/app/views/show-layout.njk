<img src="{{ recipe.image }}" alt="{{ recipe.title }}">
    <div class="food-title">
        <h1>{{ recipe.title }}</h1>
        <p>por
            {{ recipe.chef_name}}</p>
    </div>
    <div class="food-info">
        <div class="ingredients">
            <div>
                <h2>Ingredientes</h2>
            </div>
            <div class="info">
                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </div>
        </div>
        <div class="preparation">
            <div>
                <h2>Modo de preparo</h2>
            </div>
            <div class="info">
                {% set count = 1 %}
                {% for preparation in recipe.preparation %}
                    <p>{{ count }} - {{ preparation }}</p>
                    {% set count = count + 1 %}
                {% endfor %}
            </div>
        </div>
        <div class="aditional">
            <div>
                <h2>Informações adicionais</h2>
            </div>
            <div class="info">
                <p>{{ recipe.information }}</p>
            </div>
        </div>
    </div>
