{% extends "layout.njk" %}
{% block title %}
    <title>Foodfy - Esqueci a senha</title>
{% endblock title %}
{% block header %}
    {% include "admin/session/session-header.njk" %}
{% endblock header %}
{% block content %}
    <section id="forgot-password" class="session">
        <div class="container">
            <h2>Esqueceu a senha?</h2>
            <form action="/users/forgot-password" method="post">
                <div class="fields">
                    <div class="item">
                        <h4>Email</h4>
                        <input type="email" name="email" id="email" value="{{ user.email }}" placeholder="Digite seu email para recuperar sua senha"></div>
                    </div>
                    <div class="footer">
                        <a href="#"></a>
                        <button type="submit">Recuperar</button>
                    </div>
                </form>
            </div>
        </section>
    {% endblock content %}