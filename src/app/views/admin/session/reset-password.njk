{% extends "layout.njk" %}
{% block title %}
    <title>Foodfy - Resetar senha</title>
{% endblock title %}
{% block header %}
    {% include "admin/session/session-header.njk" %}
{% endblock header %}
{% block content %}
    <section id="password-reset" class="session">
        <div class="container">
            <h2>Nova senha</h2>
            <form action="/users/password-reset" method="post">
                <div class="fields">
                    <div class="item">
                        <h4>Email</h4>
                        <input type="email" name="email" id="email" value="{{ user.email }}" placeholder="Digite seu email"></div>
                        <div class="item">
                            <h4>Nova Senha</h4>
                            <input type="password" name="password" id="password" placeholder="Digite sua nova senha"></div>
                            <div class="item">
                                <h4>Repetir Senha</h4>
                                <input type="password" name="passwordRepeat" id="passwordRepeat" placeholder="Repita sua nova senha"></div>
                            </div>
                            <input type="hidden" name="token" value="{{token}}">
                            <div class="footer">
                                <a></a>
                                <button type="submit">Resetar senha</button>
                            </div>
                        </form>
                    </div>
                </section>
            {% endblock content %}