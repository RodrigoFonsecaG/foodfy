{% extends "layout.njk" %}
{% block title %}
    <title>Foodfy - Home</title>
{% endblock title %}
{% block header %}
  <header id="header">
            <nav class="container">
                <a href="/">
                    <img src="/assets/logo.png " alt="Logo foodfy" class="logo"></a>

                <div class="links">
                    <a href="/about">Sobre</a>
                    <a href="/recipes">Receitas</a>
                    <a href="/chefs">Chefs</a>
                    {% if not session.userId %}
                    <a href="/users/login">Login</a> 
                    {% endif %}
                    </div>
               {%include "filter.njk"%}

        
             </nav>
        </header>
{% endblock header %}
{% block content %}
    <section id="home">
        <div class="container">
            <div class="text">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
            </div>
            <img src="/assets/chef.png" alt="Desenho do chef">
        </div>
    </section>
    <section id="features">
        <div class="container">
            <h1>Mais acessadas</h1>
            <ul class="receitas">
                {% for recipe in recipes %}
                    <li class="receita">
                       <a href="/recipes/{{recipe.id}}"><img src="{{recipe.img}}" alt=""></a>
                        <div class="food-info">
                            <h3>{{recipe.title}}</h3>
                            <p>por {{recipe.chef_name}}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock content %}

{% block scripts %}
{% endblock scripts %}

    {% block footer %}
        <footer>
            <p>Todos direitos reservados, receitas Foodfy</p>
        </footer>
{% endblock footer %}