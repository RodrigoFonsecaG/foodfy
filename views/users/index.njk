{% extends "layout.njk" %}
{% block title %}
    <title>Foodfy - Receitas</title>
{% endblock title %}
{% block content %}
    <section id="recipes">
        <div class="container">
            <ul class="receitas">
                {% for recipe in recipes %}
                    <li class="receita">
                      <a href="/recipes/{{recipe.id}}"> <img src="{{recipe.image}}" alt=""></a>
                        <div class="food-info">
                            <h3>{{recipe.title}}</h3>
                            <p>por {{recipe.author}}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock content %}
